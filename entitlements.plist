<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow reading files from user-selected locations -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    
    <!-- Allow writing files to user-selected locations -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow access to Downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow access to Desktop folder -->
    <key>com.apple.security.files.desktop.read-write</key>
    <true/>
    
    <!-- Allow access to Documents folder -->
    <key>com.apple.security.files.documents.read-write</key>
    <true/>
    
    <!-- Allow access to Movies folder -->
    <key>com.apple.security.files.movies.read-write</key>
    <true/>
    
    <!-- Disable library validation to allow loading of third-party libraries -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow DYLD environment variables (needed for some Python packages) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Allow unsigned executable memory (needed for JIT compilation) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow JIT compilation (needed for PyTorch) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
